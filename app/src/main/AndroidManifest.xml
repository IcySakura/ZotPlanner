<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.donkeyandperi.zotplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/anteater_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeScreen_Abandoned"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchCourseOption"
            android:label="@string/start_choose_course_label"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseList"
            android:label="@string/course_list_label"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseDialog"
            android:label="@string/course"
            android:launchMode="singleTask"
            android:theme="@style/NormalDialogStyle" />
        <activity
            android:name=".LanguageSettingsDialog_Abandoned"
            android:label="@string/language_settings_dialog_label"
            android:launchMode="singleTask"
            android:theme="@style/NormalDialogStyle" />
        <activity
            android:name=".MainSettings"
            android:label="@string/settings_language"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationList"
            android:label="@string/notification_list_label"
            android:launchMode="singleTask"
            android:theme="@style/NormalDialogStyle" />
        <activity
            android:name=".NotificationSettings"
            android:label="@string/notification_settings_time_label"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationSettingsTimeInterval_Abandoned"
            android:label="@string/notification_settings_time_interval_label"
            android:launchMode="singleTask"
            android:theme="@style/NormalDialogStyle" />

        <service
            android:name=".NotificationService"
            android:enabled="true"
            android:process=":notificationService" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SelectedCourseListWeekView"
            android:label="@string/calendar_view"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationSettingsTimeStatusOption_Abandoned"
            android:label="notification_settings_time_current_status_options"
            android:launchMode="singleTask"
            android:theme="@style/NormalDialogStyle" />
        <activity
            android:name=".AboutSettingsMain"
            android:label="@string/main_settings_about_textview"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:launchMode="singleTask"
            android:theme="@style/SplashTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>