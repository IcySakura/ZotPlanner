<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RadioGroup
        android:id="@+id/notification_settings_time_interval_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"
        >
        <RadioButton
            android:id="@+id/notification_settings_time_interval_1_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_1_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_3_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_3_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_5_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_5_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_10_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_10_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_15_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_15_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_30_mins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_30_min"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_1_hrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_1_hr"
            android:layout_marginBottom="3sp"
            />
        <RadioButton
            android:id="@+id/notification_settings_time_interval_2_hrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notification_settings_time_interval_2_hrs"
            />
    </RadioGroup>

</LinearLayout>