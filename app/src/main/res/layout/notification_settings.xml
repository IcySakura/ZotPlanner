<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/notification_settings_time_textview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/notification_settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/notification_settings_status_options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_settings_time_current_status_options"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/notification_settings_current_status_options"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100sp"
                android:textColor="#a4a4a4"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_settings_time_interval_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_settings_time_current_status_title"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/notification_settings_time_current_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100sp"
                android:textColor="#a4a4a4"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_settings_time_keep_notify_me_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_settings_time_keep_notify_me_title"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notification_settings_time_current_keep_notify_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="#a4a4a4"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:id="@+id/notification_settings_time_keep_notify_me_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_settings_time_current_checking_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginStart="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_settings_time_current_checking_list_title"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/notification_settings_time_current_checking_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="100sp"
                android:textColor="#a4a4a4"
                />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>